{% extends 'base.html.twig' %}
{% block title %}Registration{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/app2.css') }}">
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>   
{% endblock %}
{% block body %}

<div class="example-wrapper">
    <h1>Registration</h1>

<form action="{{ path('app_reg') }}" method="post" class="grid-form">

    <label for="username">Логин:</label>
    <input type="text" id="username" name="username" value="{{ last_username }}" />

    <label for="password">Пароль:</label>
    <input type="password" id="password" name="password" />

    <label for="passAgain">Пароль повторно:</label>
    <input type="password" id="passAgain" name="passAgain" />

    <label for="password1">Ответ на вопрос для сброса пароля. Девичья фамилия бабушки: </label>
    <input type="password" id="password1" name="password1" />
 
    <button type="submit">Зарегистрироваться</button>
</form>

{% endblock %}





